<h1>Tacos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Restaurant</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tacos.each do |taco| %>
      <tr>
        <td><%= taco.name %></td>
        <td><%= taco.restaurant.name %></td>
        <td>
          <%= link_to 'Show', taco, class: 'btn btn-sm btn-outline-primary' %>
          <%= link_to 'Edit', edit_taco_path(taco), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Destroy', taco, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Taco', new_taco_path, class: 'btn btn-primary' %>
