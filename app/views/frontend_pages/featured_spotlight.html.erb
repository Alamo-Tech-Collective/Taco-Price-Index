<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="display-4">Featured Spotlight</h1>
          <h2 class="card-title">
            <%= @featured_taco.name %>
            <small class="text-muted">
              <%= number_to_currency(@featured_taco.price_cents / 100, precision: 2) %>
            </small>
          </h2>
          <p class="card-text lead">
            <%= @featured_taco.description %>
          </p>
          <div class="d-flex align-items-center mb-3">
            <div class="rating">
              <%= @featured_restaurant.google_rating %>â˜…
            </div>
            <div class="ms-3">
              <span class="badge bg-primary">
                <%= @featured_restaurant.google_price_level %> <%= 'ðŸ’°' * @featured_restaurant.google_price_level %>
              </span>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h3><%= @featured_restaurant.name %></h3>
              <p class="mb-0"><%= @featured_restaurant.street_address %></p>
            </div>
            <%= link_to "Order Now", restaurant_details_path(@featured_restaurant), class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h3>Why This Taco?</h3>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="fas fa-star text-warning"></i>
              Highest Rated Restaurant
            </li>
            <li class="list-group-item">
              <i class="fas fa-dollar-sign text-success"></i>
              Best Value
            </li>
            <li class="list-group-item">
              <i class="fas fa-heart text-danger"></i>
              Community Favorite
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
